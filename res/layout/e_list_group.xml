<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:adjustViewBounds="true"
    android:padding="5dp"
    android:background="#888">

    <ImageView
        android:id="@+id/search_user_pic"
        android:layout_width="40dp"
        android:layout_height="45dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5dp"
        android:adjustViewBounds="true"
        android:src="@drawable/img_select" />
    
    <ImageView
         android:id="@+id/search_icon_m"
         android:layout_width="20dp"
         android:layout_height="20dp"
         android:layout_margin="5dp"
         android:layout_toRightOf="@+id/search_user_pic"
         android:src="@drawable/search_icon_m" />
    
    <ImageView
         android:id="@+id/search_icon_f"
         android:layout_width="20dp"
         android:layout_height="20dp"
         android:layout_margin="5dp"
         android:layout_toRightOf="@+id/search_user_pic"
         android:src="@drawable/search_icon_f" />
    
    <ImageView
         android:id="@+id/search_icon_id"
         android:layout_width="20dp"
         android:layout_height="20dp"
         android:layout_margin="5dp"
         android:layout_toRightOf="@+id/search_user_pic"
         android:layout_below="@+id/search_user_name"
         android:src="@drawable/search_icon_id" />

    <TextView
        android:id="@+id/search_user_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_margin="2dp"
        android:layout_toRightOf="@+id/search_icon_m"
        android:textColor="#DDD"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/search_user_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/search_user_name"
        android:layout_margin="5dp"
        android:layout_toRightOf="@+id/search_icon_id"
        android:textColor="#DDD"
        android:textSize="15sp" />
    
    <ImageView
         android:id="@+id/search_icon_leader"
         android:layout_width="20dp"
         android:layout_height="20dp"
         android:layout_margin="5dp"
         android:layout_toRightOf="@+id/search_user_id"
         android:layout_below="@+id/search_user_name"
         android:src="@drawable/search_icon_leader" />
    
    <ImageView
         android:id="@+id/search_icon_member"
         android:layout_width="20dp"
         android:layout_height="20dp"
         android:layout_margin="5dp"
         android:layout_toRightOf="@+id/search_user_id"
         android:layout_below="@+id/search_user_name"
         android:src="@drawable/search_icon_member" />
    
    <ImageView
         android:id="@+id/search_icon_admin"
         android:layout_width="20dp"
         android:layout_height="20dp"
         android:layout_margin="5dp"
         android:layout_toRightOf="@+id/search_user_id"
         android:layout_below="@+id/search_user_name"
         android:src="@drawable/search_icon_admin" />
 
</RelativeLayout>
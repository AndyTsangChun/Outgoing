<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="@drawable/sos_bg">

    
    <Button
        android:id="@+id/h_sos_Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sos_status"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:onClick="btnHandler"
        android:background="@drawable/h_sos_button_ani" />



    <RelativeLayout
        android:id="@+id/sos_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" >
        
      <TextView
        android:id="@+id/sos_TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="SOS Status : " />

    <TextView
        android:id="@+id/sos_TB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/sos_TV"
        android:text="OFF" />
    
    </RelativeLayout>

</RelativeLayout>